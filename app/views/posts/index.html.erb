<h1>ブログ</h1>

<p style="text-align: right;">
  <%= link_to('記事を書く', new_post_path) %>
</p>

<% @posts.each do |post| %>
<hr />
<h2><%= post.title %></h2>
<p style="text-align: right;">
  <%= post.updated_at.strftime("%Y年%m月%d日 %H時%M分") %>
</p>

<pre><%= post.body %></pre>

<p style="text-align: right;">
  <%= link_to('編集', edit_post_path(post)) %>
  <%= link_to('削除', post, method: :delete, data: { confirm: '本当に削除しますか？' }) %>
</p>

<% end %>
